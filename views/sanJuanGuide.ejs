// ✅ Manteniendo navbar scrolled
document.addEventListener("DOMContentLoaded", function () {
  const sidebarRight = document.querySelector(".sidebar-right");
  const lastBlock = sidebarRight.lastElementChild;
  const allBlocks = Array.from(sidebarRight.children);
  const secondBlock = allBlocks.length > 1 ? allBlocks[1] : null;
  const footer = document.querySelector("footer");
  let lastScrollY = window.scrollY;
  let initialPosition = lastBlock.offsetTop;

  lastBlock.style.transition = "opacity 0.4s ease-in-out, transform 0.4s ease-in-out";

  // ✅ Crear un placeholder para evitar el movimiento del contenido
  const placeholder = document.createElement("div");
  placeholder.style.width = `${lastBlock.offsetWidth}px`;
  placeholder.style.height = `${lastBlock.offsetHeight}px`;
  sidebarRight.insertBefore(placeholder, lastBlock.nextSibling);

  function updateSidebarVisibility() {
    const lastBlockRect = lastBlock.getBoundingClientRect();
    const sidebarRect = sidebarRight.getBoundingClientRect();
    const footerRect = footer.getBoundingClientRect();
    const secondBlockRect = secondBlock ? secondBlock.getBoundingClientRect() : null;
    const scrollingUp = window.scrollY < lastScrollY;
    const scrollingDown = window.scrollY > lastScrollY;

    const lastBlockWidth = lastBlock.offsetWidth;

    // ✅ Mantener el último bloque fijo mientras el footer no esté visible
    if (window.scrollY > initialPosition && footerRect.top > window.innerHeight) {
      lastBlock.style.position = "fixed";
      lastBlock.style.bottom = "20px";
      lastBlock.style.width = `${lastBlockWidth}px`;
      placeholder.style.display = "block";
    } else if (footerRect.top <= window.innerHeight) {
      // Si el footer es visible, colocarlo de manera absoluta
      lastBlock.style.position = "absolute";
      lastBlock.style.bottom = "0";
      lastBlock.style.width = "100%";
      placeholder.style.display = "none";
    } else {
      // Si estamos por encima de la posición inicial, devolverlo a su estado normal
      lastBlock.style.position = "relative";
      lastBlock.style.bottom = "auto";
      lastBlock.style.width = "auto";
      placeholder.style.display = "none";
    }

    // ✅ Desvanecer el bloque al acercarse al segundo bloque
    if (scrollingUp && secondBlockRect) {
      const distanceToSecondBlock = lastBlockRect.top - secondBlockRect.bottom;
      const fadeStart = 50;

      if (distanceToSecondBlock <= fadeStart) {
        let opacityValue = Math.max(0, distanceToSecondBlock / fadeStart);
        lastBlock.style.opacity = opacityValue.toFixed(2);
        lastBlock.style.transform = `translateY(${(1 - opacityValue) * 10}px)`;

        if (opacityValue === 0) {
          lastBlock.style.pointerEvents = "none";
        } else {
          lastBlock.style.pointerEvents = "auto";
        }
      } else {
        lastBlock.style.opacity = "1";
        lastBlock.style.transform = "translateY(0)";
      }
    }

    // ✅ Si el usuario baja, aseguramos que vuelva a aparecer suavemente
    if (scrollingDown) {
      lastBlock.style.opacity = "1";
      lastBlock.style.transform = "translateY(0)";
      lastBlock.style.pointerEvents = "auto";
    }

    lastScrollY = window.scrollY;
  }

  window.addEventListener("scroll", updateSidebarVisibility, { passive: true });
  window.addEventListener("resize", updateSidebarVisibility);

  // ✅ Ajustar placeholder al redimensionar
  window.addEventListener("resize", () => {
    placeholder.style.width = `${lastBlock.offsetWidth}px`;
    placeholder.style.height = `${lastBlock.offsetHeight}px`;
  });

  updateSidebarVisibility(); // ✅ Ejecutar al cargar la página
});


  </script>
